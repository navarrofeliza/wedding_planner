@model Wedding

<div class="text-center">
    <h1>Plan Your Wedding</h1>
    <div class="row">
        <div class="col-sm-3">
            <form asp-action="CreateWedding" asp-controller="Home" method="POST">
                <div class="form-group">
                    <label asp-for="ToBeNameOne">Wedder One</label>
                    <input type="text" asp-for="ToBeNameOne" class="form-control">
                    <span asp-validation-for="ToBeNameOne"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ToBeNameTwo">Wedder Two</label>
                    <input type="text" asp-for="ToBeNameTwo" class="form-control">
                    <span asp-validation-for="ToBeNameTwo"></span>
                </div>
                <div class="form-group">
                    <label for="Date">Date</label>
                    <input type="datetime-local" asp-for="Date" class="form-control">
                    <span asp-validation-for="Date"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input type="text" asp-for="Address" class="form-control">
                    <span asp-validation-for="Address"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Add Wedding!</button>
                </div>
            </form>
        </div>
    </div>
</div>